RewriteEngine On

# Force HTTPS on all requests
RewriteCond %{HTTPS} !=on
RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Redirect www to non-www (with HTTPS)
RewriteCond %{HTTP_HOST} ^www\.abhigyanacademy\.com [NC]
RewriteRule ^(.*)$ https://abhigyanacademy.com/$1 [L,R=301]


# Redirect all requests to the /public directory (if applicable)
RewriteRule ^(.*)$ public/$1 [L]

# Apply HSTS for one year (31536000 seconds) with subdomains and preload options
# Header always set Strict-Transport-Security "max-age=31536000; includeSubDomains; preload"

# # X-Content-Type-Options: Prevent MIME type sniffing
# Header always set X-Content-Type-Options "nosniff"

# # X-Frame-Options: Prevent clickjacking by disallowing the site from being framed
# Header always set X-Frame-Options "SAMEORIGIN"

# Referrer-Policy: Control the amount of referrer information sent
# Header always set Referrer-Policy "strict-origin-when-cross-origin"

# Content Security Policy (CSP): Define allowed sources for scripts, styles, images, etc.
# Consider removing 'unsafe-inline' for enhanced security, or use nonces/hashes
# Header always set Content-Security-Policy "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data:; object-src 'none'; base-uri 'self'; form-action 'self'"

